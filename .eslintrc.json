{
  "extends": [
    "./src/.eslintrc.json",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "15.0"
    }
  },
  "rules": {
    "no-underscore-dangle": "off",
    "func-style": "warn",
    "func-names": "warn",
    "no-undefined": "warn",
    "no-process-env": "warn",
    "no-process-exit": "warn"
  }
}
